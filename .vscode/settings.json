{
    "actionButtons": {
        "defaultColor": "#ff0034", // Can also use string color names.
        "loadNpmCommands":false, // Disables automatic generation of actions for npm commands.
        "reloadButton":"‚ôªÔ∏è", // Custom reload button text or icon (default ‚Üª). null value enables automatic reload on configuration change
        "commands": [
            {
                "cwd": "${workspaceFolder}",     // Terminal initial folder ${workspaceFolder} and os user home as defaults
                "name": "Run server",
                "color": "red",
                "singleInstance": true,
                "command": "env\\Scripts\\activate.bat \n python app.py" // "env\\Scripts\\activate.bat \n set FLASK_ENV=development \n flask run"
            },
            {
                "name": "New terminal",
                "color": "green",
                "command": "workbench.action.terminal.openNativeConsole", // workbench.action.terminal.new
            },
            {
            "name": "ü™ü Split editor",
            "color": "orange",
            "useVsCodeApi": true,
            "command": "workbench.action.splitEditor"
            },
            {
                "name": "Simular Plugin",
                "color": "lightblue",
                "singleInstance": true,
                "command": "curl -XGET http://127.0.0.1:5000/${fileBasenameNoExtension}" // relativeFile
            }
        ]
    },
    "favorites.resources": [],
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "./source/test",
        "-p",
        "test_*.py"
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.unittestEnabled": true,
    "files.exclude": {
        "**/__pycache__": true,
        "**/.gitignore": true,
        "**/env": true
    }
}